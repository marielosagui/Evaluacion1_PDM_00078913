<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="#000"
        android:layout_gravity="center"/>


    <TextView

        android:id="@+id/tv_nameG"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Escriba el usuario aqui" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Electronico"
        android:textColor="#000"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/tv_generoG"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Escriba su correo aqui " />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="#0ff"
        android:text="ENVIAR" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="@color/naranja"
            android:text=" PRODUCTO 1 " />


        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/fucsia"
            android:text="   PRODUCTO 2 " />


        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/morado"
            android:text=" PRODUCTO 3" />


        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/blue"
            android:text="PRODUCTO 4 " />


        <EditText
            android:layout_width="358px"

            android:layout_height="300px"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/azuloscu"
            android:text="PRODUCTO 5" />


        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/celeste"
            android:text="PRODUCTO 6 " />


        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/bluec"
            android:text="PRODUCTO 7 " />


        <EditText
            android:layout_width="358px"
            android:layout_height="300px"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/green"
            android:text="PRODCUTO 8" />


        <EditText
            android:layout_width="358px"

            android:layout_height="300px"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/verdeoscu"
            android:text="PRODUCTO 9" />

    </GridLayout>

</LinearLayout>